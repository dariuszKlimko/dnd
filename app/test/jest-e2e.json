{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".spec.ts$",
  "collectCoverageFrom": ["../src/**/*.ts"],
  "coverageDirectory": "../coverage",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@app/(.*)$": "<rootDir>/../src/$1",
    "@test/(.*)$": "<rootDir>/$1"
  }
}
